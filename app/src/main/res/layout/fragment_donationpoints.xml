<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donationpoints"
    android:padding="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"

    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Donation Points"
            android:drawableBottom="@drawable/ic_donation_points"
            android:textColor="#286cb5"
            android:textSize="25dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Find Donation points in your area"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            />
       <Spinner
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/selectcity"
           android:drawableRight="@drawable/ic_drop_down_circle_24"

           />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#286cb5"
        android:text="________________________________________________________"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#286cb5"
        android:text="Donation Points"
        android:textSize="18sp"
        android:textStyle="bold|italic"/>

    <ListView
        android:id="@+id/ngolist"
        android:layout_width="match_parent"
        android:layout_height="382dp" />

    <Button
        android:id="@+id/onmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="On Map" />
    <Button
        android:id="@+id/btnpath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Path" />

</LinearLayout>
